<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HW2.EditorPage">
    <ContentPage.Content>
        <Grid Padding="5">
            <StackLayout>
                <Label x:Name="count" FontSize="Subtitle" Margin="5" Text="0 символов"/>
                <Editor x:Name="editor" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" TextChanged="Editor_TextChanged"></Editor>
            </StackLayout>
            <Button Clicked="Button_Clicked" CornerRadius="90" WidthRequest="70" HeightRequest="70" VerticalOptions="EndAndExpand" HorizontalOptions="EndAndExpand" Text="+" FontSize="Large" Margin="20"></Button>
        </Grid>
    </ContentPage.Content>
</ContentPage>